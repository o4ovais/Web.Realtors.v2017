@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Add / Edit Properties</h1>
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					Add / Edit Properties
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-6">
							<form role="form">
								<div class="form-group">
									<label>Title</label>
									<input class="form-control">
									<p class="help-block">Please enter the heading of properties(Max 50 chars).</p>
								</div>
								<div class="form-group">
									<label>Property Type</label>
									<select class="form-control">
										<option value="0">Select Property Type</option>
										<option value="1">Residential - 1BHK</option>
										<option value="2">Residential - 2BHK</option>
										<option value="3">Residential - 3BHK</option>
										<option value="4">Residential - 4BHK</option>
										<option value="5">Commercial - Office</option>
										<option value="6">Commercial - Shop</option>
										<option value="7">Commercial - Godown</option>
										<option value="8">PG</option>
									</select>
								</div>
								<div class="form-group1">
									<label>Rent</label>
								</div>
								<div class="form-group input-group">

									<span class="input-group-addon">Rs.</span>
									<input type="text" class="form-control">
									<span class="input-group-addon">.00</span>
								</div>
								<div class="form-group">
									<label>Locality</label>
									<select class="form-control">
										<option value="0">Select Locality</option>
										<option value="1">Bandra W</option>
										<option value="2">Bandra E</option>
										<option value="3">Bandra BKC</option>
										<option value="4">Andheri - E</option>
										<option value="5">Andheri - W</option>
										<option value="6">Juhu</option>
										<option value="7">Santacruz - E</option>
										<option value="8">Santacruz - W</option>
										<option value="9">Khar - W</option>
										<option value="10">Khar - E</option>
									</select>
								</div>

								<div class="form-group">
									<label>Area (sqft / sqm.)</label>
									<input class="form-control" placeholder="Enter Area in sqft or sqm">
								</div>

								<div class="form-group">
									<label>Address</label>
									<textarea class="form-control" rows="3"></textarea>
								</div>
								<div class="form-group">
									<label>Description</label>
									<textarea class="form-control" rows="3"></textarea>
								</div>

								<button type="submit" class="btn primary_btn">Submit Button</button>
								<button type="reset" class="btn btn-default">Reset Button</button>
							</form>
						</div>
